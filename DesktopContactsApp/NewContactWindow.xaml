<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox" Margin="0, 0, 0, 5"/>
            <TextBox x:Name="EmailTextBox" Margin="0, 0, 0, 5"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0, 0, 0, 5"/>
            <Button Content="Save" Click="SaveButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
